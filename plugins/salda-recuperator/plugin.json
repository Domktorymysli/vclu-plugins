{
  "id": "salda-recuperator",
  "name": "Salda Recuperator",
  "version": "2.1.0",
  "description": "Integracja z rekuperatorem Salda - odczyt danych i sterowanie z expose API",
  "author": "vCLU",
  "license": "MIT",

  "docs": [
    { "title": "Documentation", "file": "README.md" }
  ],

  "requires": {
    "vclu": ">=1.0.0",
    "modules": ["http", "timer", "json"]
  },

  "config": {
    "ip": {
      "type": "string",
      "required": true,
      "description": "Adres IP rekuperatora (np. 192.168.0.100)"
    },
    "login": {
      "type": "string",
      "required": true,
      "description": "Login do rekuperatora"
    },
    "password": {
      "type": "string",
      "required": true,
      "description": "Hasło do rekuperatora"
    },
    "interval": {
      "type": "number",
      "default": 60,
      "min": 10,
      "max": 3600,
      "description": "Interwał odczytu danych w sekundach"
    }
  },

  "exports": {
    "objects": {
      "data": {
        "type": "RecuperatorData",
        "description": "Aktualne dane rekuperatora"
      }
    },
    "sensors": [
      { "id": "supplyAir", "type": "temperature", "description": "Temperatura nawiewu" },
      { "id": "exhaustAir", "type": "temperature", "description": "Temperatura wywiewu" },
      { "id": "extractAir", "type": "temperature", "description": "Temperatura wyciągu" },
      { "id": "outsideAir", "type": "temperature", "description": "Temperatura zewnętrzna" },
      { "id": "humidity", "type": "humidity", "description": "Wilgotność powietrza 0-100%" }
    ],
    "controls": [
      { "id": "fanSpeed", "type": "fan", "range": "0-4", "description": "Prędkość wentylatora (biegi)" },
      { "id": "temperature", "type": "number", "range": "15-30", "description": "Temperatura zadana °C" }
    ],
    "events": [
      { "name": "salda:updated", "description": "Dane zostały zaktualizowane" },
      { "name": "salda:error", "description": "Błąd komunikacji z rekuperatorem" }
    ]
  }
}
