{
  "id": "telegram",
  "name": "Telegram Notifications",
  "version": "1.3.0",
  "description": "Wysyłanie i odbieranie wiadomości przez Telegram Bot API",
  "author": "vCLU",
  "license": "MIT",

  "docs": [
    { "title": "Documentation", "file": "README.md" }
  ],

  "requires": {
    "vclu": ">=1.0.0",
    "modules": ["http", "json"]
  },

  "config": {
    "botToken": {
      "type": "string",
      "required": true,
      "description": "Token bota z @BotFather (format: 123456789:ABCdefGHI...)"
    },
    "proxyUrl": {
      "type": "string",
      "required": false,
      "description": "URL proxy z basic auth (np. https://user:pass@proxy.example.com/telegram)"
    },
    "insecureSkipVerify": {
      "type": "boolean",
      "default": false,
      "description": "Wyłącz weryfikację SSL (dla self-signed certyfikatów proxy)"
    },
    "chatId": {
      "type": "string",
      "required": false,
      "description": "Domyślny ID chatu do wysyłania wiadomości"
    },
    "defaultParseMode": {
      "type": "string",
      "default": "HTML",
      "description": "Domyślny format wiadomości (HTML, Markdown, MarkdownV2)"
    },
    "enablePolling": {
      "type": "boolean",
      "default": true,
      "description": "Włącz odbieranie wiadomości (polling)"
    },
    "pollingInterval": {
      "type": "number",
      "default": 5,
      "description": "Interwał pollingu w sekundach"
    }
  },

  "exports": {
    "events": [
      { "name": "telegram:message", "description": "Odebrano wiadomość" },
      { "name": "telegram:command", "description": "Odebrano komendę (np. /start)" },
      { "name": "telegram:callback", "description": "Kliknięto przycisk inline" },
      { "name": "telegram:sent", "description": "Wiadomość wysłana" },
      { "name": "telegram:error", "description": "Błąd API" }
    ]
  }
}
