{
  "id": "telegram",
  "name": "Telegram Notifications",
  "version": "1.0.0",
  "description": "Powiadomienia przez Telegram Bot API",
  "author": "vCLU",
  "license": "MIT",

  "docs": [
    { "title": "Documentation", "file": "README.md" }
  ],

  "requires": {
    "vclu": ">=1.0.0",
    "modules": ["http", "json"]
  },

  "config": {
    "botToken": {
      "type": "string",
      "required": true,
      "description": "Token bota z @BotFather"
    },
    "chatId": {
      "type": "string",
      "required": true,
      "description": "ID chatu/użytkownika do wysyłania wiadomości"
    },
    "defaultParseMode": {
      "type": "string",
      "default": "HTML",
      "description": "Domyślny format wiadomości (HTML, Markdown, MarkdownV2)"
    }
  },

  "exports": {
    "events": [
      { "name": "telegram:sent", "description": "Wiadomość wysłana" },
      { "name": "telegram:error", "description": "Błąd wysyłania" }
    ]
  }
}
