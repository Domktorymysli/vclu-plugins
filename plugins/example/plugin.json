{
  "id": "example",
  "name": "Example Plugin",
  "version": "1.0.0",
  "author": "vCLU Team",
  "license": "MIT",
  "description": "Przykładowy plugin pokazujący jak pisać własne pluginy dla vCLU",

  "docs": [
    { "title": "Getting Started", "file": "README.md" }
  ],

  "config": {
    "greeting": {
      "type": "string",
      "default": "Hello",
      "description": "Tekst powitania"
    },
    "interval": {
      "type": "number",
      "default": 60,
      "min": 10,
      "max": 3600,
      "description": "Interwał w sekundach"
    },
    "enabled": {
      "type": "boolean",
      "default": true,
      "description": "Czy plugin aktywny"
    }
  }
}
